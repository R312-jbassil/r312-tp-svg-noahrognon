---
import Layout from "../layouts/Layout.astro";
import { ui } from "../i18n/ui.js";

const user = Astro.locals.user;
const locale =
  Astro.locals.lang === "fr" || Astro.locals.lang === "en"
    ? Astro.locals.lang
    : "en";
const pageText = ui[locale].index;
const hero = pageText.hero;
const features = Array.isArray(pageText.features) ? pageText.features : [];
const stats = Array.isArray(pageText.stats) ? pageText.stats : [];
const featureItems = features.map((feature, index) => ({
  ...feature,
  key: `feature-${index}`,
  order: index + 1,
}));
const statItems = stats.map((stat, index) => ({
  ...stat,
  key: `stat-${index}`,
}));
---

<Layout title={pageText.title} locale={locale}>
  <main class="relative overflow-hidden">
    <section class="relative max-w-6xl mx-auto px-6 pt-20 pb-24">
      <div
        aria-hidden="true"
        class="absolute inset-0 blur-3xl opacity-60 pointer-events-none"
        style="background: radial-gradient(circle at top left, rgba(59,130,246,0.35), transparent 55%), radial-gradient(circle at bottom right, rgba(236,72,153,0.35), transparent 55%);"
      ></div>

      <div class="relative z-10 flex flex-col lg:flex-row items-center gap-12">
        <div class="flex-1 space-y-6 text-center lg:text-left">
          <span class="inline-flex items-center gap-2 rounded-full border border-primary/40 bg-primary/10 px-4 py-1 text-sm font-semibold uppercase tracking-wide text-primary">
            {hero.eyebrow}
          </span>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black leading-tight">
            {hero.headline}
          </h1>
          <p class="text-base sm:text-lg text-base-content/80 max-w-2xl mx-auto lg:mx-0">
            {hero.subheadline}
          </p>
          <div class="flex flex-col sm:flex-row items-center gap-4 justify-center lg:justify-start">
            <a href="/generator" class="btn btn-primary btn-wide sm:btn-lg shadow-lg shadow-primary/40">
              {hero.primaryCta}
            </a>
            <a href="/gallery/public" class="btn btn-outline btn-secondary btn-wide sm:btn-lg">
              {hero.secondaryCta}
            </a>
            <a href={user ? "/gallery" : "/login"} class="btn btn-ghost btn-wide sm:btn-lg text-base-content/70 hover:text-primary">
              {hero.tertiaryCta}
            </a>
          </div>

          {statItems.length > 0 && (
            <dl class="mt-8 grid grid-cols-1 sm:grid-cols-3 gap-4">
              {
                statItems.map((item) => (
                  <div class="rounded-2xl border border-base-200/70 bg-base-100/70 backdrop-blur p-4 text-center shadow" key={item.key}>
                    <dt class="text-base-content/60 text-sm uppercase tracking-wide">{item.label}</dt>
                    <dd class="text-3xl font-bold text-primary mt-1">{item.value}</dd>
                  </div>
                ))
              }
            </dl>
          )}
        </div>

        <div class="flex-1 w-full">
          <div class="relative rounded-3xl border border-white/40 bg-white/80 shadow-2xl backdrop-blur-lg p-6">
            <div class="absolute -top-8 -right-6 h-24 w-24 rounded-full bg-gradient-to-br from-primary to-secondary opacity-40 blur-2xl"></div>
            <div class="absolute -bottom-10 -left-8 h-28 w-28 rounded-full bg-gradient-to-tr from-secondary to-primary opacity-40 blur-2xl"></div>
            <div class="relative space-y-4">
              <header class="flex items-center justify-between">
                <div class="flex items-center gap-2">
                  <span class="h-3 w-3 rounded-full bg-red-400"></span>
                  <span class="h-3 w-3 rounded-full bg-yellow-400"></span>
                  <span class="h-3 w-3 rounded-full bg-green-400"></span>
                </div>
                <span class="text-sm text-base-content/60">SVG Preview</span>
              </header>
              <div class="rounded-2xl bg-base-200/70 border border-base-300/60 p-4 shadow-inner">
                <svg viewBox="0 0 240 160" class="w-full">
                  <defs>
                    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
                      <stop offset="0%" style="stop-color:#60a5fa;stop-opacity:1" />
                      <stop offset="100%" style="stop-color:#ec4899;stop-opacity:1" />
                    </linearGradient>
                  </defs>
                  <rect x="8" y="8" width="224" height="144" rx="20" fill="url(#grad1)" opacity="0.15" />
                  <circle cx="80" cy="70" r="36" fill="#60a5fa" opacity="0.8" />
                  <circle cx="150" cy="100" r="46" fill="#ec4899" opacity="0.7" />
                  <path d="M60 120 Q120 40 180 120" stroke="#1d4ed8" stroke-width="6" fill="none" stroke-linecap="round" />
                  <rect x="40" y="40" width="160" height="80" rx="16" stroke="#0f172a" stroke-width="4" fill="transparent" opacity="0.6" />
                </svg>
              </div>
              <div class="grid grid-cols-2 gap-3 text-sm">
                <div class="rounded-xl border border-base-200/70 p-3 bg-base-100/80">
                  <h3 class="font-semibold text-base-content/70 mb-2">Prompt</h3>
                  <p class="text-base-content/60">
                    “Create a futuristic landscape with neon gradients and soft organic shapes.”
                  </p>
                </div>
                <div class="rounded-xl border border-base-200/70 p-3 bg-base-100/80">
                  <h3 class="font-semibold text-base-content/70 mb-2">SVG output</h3>
                  <p class="text-base-content/60">
                    Layered circles, smooth bezier curves, and vibrant gradients ready for animation.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    {featureItems.length > 0 && (
      <section class="relative max-w-6xl mx-auto px-6 pb-24">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {
            featureItems.map((feature) => (
              <article class="rounded-3xl border border-base-200/60 bg-base-100/80 backdrop-blur-lg shadow-lg p-6 space-y-3 hover:shadow-2xl transition hover:-translate-y-1" key={feature.key}>
                <div class="h-10 w-10 rounded-full bg-primary/15 text-primary flex items-center justify-center text-lg font-bold">
                  {String(feature.order).padStart(2, "0")}
                </div>
                <h3 class="text-xl font-semibold">{feature.title}</h3>
                <p class="text-base-content/70 text-sm">{feature.description}</p>
              </article>
            ))
          }
        </div>
      </section>
    )}

    <section class="pb-24 px-6">
      <div class="max-w-5xl mx-auto rounded-3xl border border-primary/30 bg-gradient-to-br from-primary/20 via-base-100/90 to-secondary/20 backdrop-blur-lg shadow-2xl p-10 text-center space-y-6">
        <h2 class="text-3xl font-bold">{pageText.description}</h2>
        <p class="text-base-content/70 max-w-2xl mx-auto">
          {hero.subheadline}
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/generator" class="btn btn-primary btn-wide sm:btn-lg">
            {pageText.generatorButton}
          </a>
          <a href="/gallery" class="btn btn-outline btn-secondary btn-wide sm:btn-lg">
            {pageText.myGalleryButton}
          </a>
          <a href="/gallery/public" class="btn btn-ghost btn-wide sm:btn-lg text-base-content/70 hover:text-secondary">
            {pageText.publicGalleryButton}
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
